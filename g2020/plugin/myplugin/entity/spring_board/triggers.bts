CLICK_TRAMPOLINE
{
    If(not IsPlayer(entity = $obj2))
    {
        Return()
    }

    $yaw = GetEntityYaw(entity = $obj2)
    $pitch = GetEntityPitch(entity = $obj2)
    $map = GetEntityMap(entity = $obj1)
    $pos = GetEntityPosition(entity = $obj1)

    $targetPos = ComputeV3(op = "add", p1 = {x = 0, y = 1 , z = 0}, p2 = $pos)
    SetEntityPosition(entity = $obj2, map = $map, pos = $targetPos, ry = $yaw , rp = $pitch)
}