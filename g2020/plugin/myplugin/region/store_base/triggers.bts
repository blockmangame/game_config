REGION_ENTER {
    Sequence {
        IsPlayer(entity = $obj1)
        $player = $obj1
        $tip = GetRegionConfig(key = "tip", region = $region)
        ShowRegionTip(player = $player, cfg = $tip, isShow = true)
    }
}

REGION_LEAVE {
    Sequence {
		IsPlayer(entity = $obj1)
		$player = $obj1
		$tip = GetRegionConfig(key = "tip", region = $region)
        ShowRegionTip(player = $player, cfg = $tip, isShow = false)
	}
}
